type DeviceInfo {
    deviceId: String!
    name: String!
    online: Boolean!
    powerOn: Boolean!
}

type Query {
    getState(deviceId: String!): DeviceInfo!
}

type Mutation {
    updateState(deviceId: String!): Boolean!
    toggle(deviceId: String!): Boolean!
    power(deviceId: String!, powerOn: Boolean!): Boolean!
}

type Subscription {
    subscribeDeviceInfoUpdate(deviceId:String!) : DeviceInfo!
}